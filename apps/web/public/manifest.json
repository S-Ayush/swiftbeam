  "shortcuts": [
    {
      "name": "Create Room",
      "short_name": "Create",
      "description": "Create a new sharing room",
      "url": "/room/create",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Join Room",
      "short_name": "Join",
      "description": "Join an existing room",
      "url": "/room/new",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/room/create",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": ["*/*"]
        }
      ]
    }
  },
